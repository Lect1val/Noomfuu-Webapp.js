<!DOCTYPE html>
<html>
  <head>
    <%- include component/import%>
    <style>
      .note_header {
        font-size: 32px;
        font-weight: 700;
        color: #6e89ea;
      }

      .note_content {
        padding: 1%;
        font-weight: 300;
        color: #223e63;
        font-size: 18px;
        font-family: "Sarabun", sans-serif;
      }

      .add_card {
        border-color: #c9e8ff;
        background-color: #e2f3ff;
        margin: 3%;
        padding-top: 30%;
        padding-bottom: 30%;
      }

      .note_owner {
        padding: 2%;
        font-weight: 600;
        color: #2f4e77;
        font-size: 22px;
      }

      .modify_status {
        padding: 2%;
        font-weight: 400;
        color: #2f4e77;
        text-align: right;
        font-size: 20px;
      }
    </style>
  </head>

  <body>
    <%- include component/navbar%>
    <div class="container-fluid">
      <div class="row">
        <%- include component/contactList%>

        <div class="col-md-9">
          <% include component/profileNav%>
          <div class="row">
            <div class="col-md-6">
              <input
                id="new_content_header"
                type="text"
                value="Content Header"
                class="note_header"
                style="border: none"
              />
            </div>
            <div
              class="col-md-6"
              style="
                font-size: 32px;
                font-weight: 700;
                color: #6e89ea;
                text-align: right;
                padding-right: 3%;
              "
            >
              Username
            </div>
          </div>
          <hr />
          <form
            method="GET"
            action="/profile/<%= getUserID %>/note/content"
            id="edit_content_form"
          >
            <div class="row">
              <textarea
                name="old_content"
                rows="10"
                class="note_content"
                id="new_content"
              >
